{
  "private": true,
  "name": "dj.olliekav.com",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --no-sw --no-prerender --template src/template.html",
    "serve": "preact build && sirv build --cors --single",
    "dev": "preact watch --no-sw --template src/template.html",
    "dev-server": "preact watch --https --key /usr/local/etc/httpd/server.key --cert /usr/local/etc/httpd/server.crt --template src/template.html",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.1.0",
    "eslint": "^9.39.1",
    "eslint-config-preact": "^2.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-preset-preact": "^4.1.1",
    "netlify-cli": "^17.37.1",
    "per-env": "^1.0.2",
    "preact-cli": "^3.5.1",
    "preact-render-spy": "^1.3.0",
    "sass": "^1.97.1",
    "sirv-cli": "^3.0.1",
    "yarn-upgrade-all": "^0.7.5"
  },
  "dependencies": {
    "@netlify/cache": "^3.3.4",
    "@netlify/functions": "^5.1.2",
    "classnames": "^2.5.1",
    "preact": "^10.27.2",
    "preact-render-to-string": "^6.6.3",
    "preact-router": "^4.1.2",
    "react-device-detect": "^2.2.3",
    "react-modal": "^3.16.3",
    "react-process-string": "^1.2.0",
    "rss-parser": "^3.13.0",
    "sass-loader": "10.2.0",
    "wavesurfer.js": "^7.11.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
