{
  "private": true,
  "name": "dj.olliekav.com",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --no-sw --no-prerender --template src/template.html",
    "serve": "preact build && sirv build --cors --single",
    "dev": "preact watch --no-sw --template src/template.html",
    "dev-https": "preact watch --https --key /usr/local/etc/httpd/server.key --cert /usr/local/etc/httpd/server.crt --template src/template.html",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.1.0",
    "eslint": "^8.9.0",
    "eslint-config-preact": "^1.1.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-preset-preact": "^4.0.3",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.5",
    "preact-render-spy": "^1.3.0",
    "sass": "^1.49.8",
    "sass-loader": "10.1.1",
    "sirv-cli": "^2.0.2"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "preact": "^10.5.13",
    "preact-render-to-string": "^5.1.19",
    "preact-router": "^4.0.1",
    "react-device-detect": "^2.1.2",
    "react-modal": "^3.13.1",
    "react-process-string": "^1.2.0",
    "rss-parser": "^3.12.0",
    "wavesurfer.js": "^6.0.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
