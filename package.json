{
  "private": true,
  "name": "dj.olliekav.com",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --no-prerender --template src/template.html",
    "serve": "preact build && sirv build --cors --single",
    "dev": "preact watch --template src/template.html",
    "dev-https": "preact watch --https --key /usr/local/etc/httpd/server.key --cert /usr/local/etc/httpd/server.crt --template src/template.html",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.0.0",
    "eslint": "^7.21.0",
    "eslint-config-preact": "^1.1.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.2",
    "node-sass": "^5.0.0",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.5",
    "preact-render-spy": "^1.3.0",
    "sass-loader": "^10.1.1",
    "sirv-cli": "^1.0.11"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "css-loader": "^5.1.1",
    "netlify-cli": "^3.10.2",
    "preact": "^10.5.12",
    "preact-render-to-string": "^5.1.12",
    "preact-router": "^3.2.1",
    "react-modal": "^3.12.1",
    "react-process-string": "^1.2.0",
    "rss-parser": "^3.12.0",
    "wavesurfer.js": "^4.5.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
